@page "/demo"
@inject IThemeService ThemeService

<h3>Demo</h3>


<div class="card">
    <div class="card-header">
        <p class="mb-2">Available Themes</p>
        <ThemeSwitcher />
    </div>
    <div class="card-body">
        <BlazorCodeSnippet SnippetFilePath="snippetfiles/test.txt" Language="SnippetLanguage.Cshtml" AllowCopy="true">
            <FileNotFound>
                <p>File can't be found</p>
            </FileNotFound>
        </BlazorCodeSnippet>
    </div>
</div>


<h4 class="mt-3">Available Themes</h4>
<ul>
    @foreach(var theme in ThemeService.GetThemes())
    {
        <li>@theme.Name</li>
    }
</ul>





